<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.carservice.web.company.CompanyBrowse"
        focusComponent="companiesTable"
        lookupComponent="companiesTable"
        messagesPack="com.company.carservice.web.company">
    <dsContext>
        <collectionDatasource id="companiesDs"
                              class="com.company.carservice.entity.Company"
                              view="company-view">
            <query>
                <![CDATA[select e from carservice$Company e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="companiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="companiesTable"
                datasource="companiesDs">
            <properties include=".*"/>
        </filter>
        <table id="companiesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="phone"/>
                <column id="email"/>
                <column id="inn"/>
            </columns>
            <rows datasource="companiesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="companiesTable.create"/>
                <button id="editBtn"
                        action="companiesTable.edit"/>
                <button id="removeBtn"
                        action="companiesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
